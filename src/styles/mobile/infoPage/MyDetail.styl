.detail-container
    .nav-bar
        display none
    // 注意下面的 position 设置
    // 这是为了本组件下的导航条可以正常定位
    position relative

    background-color white
    display flex
    flex-flow column nowrap

    // 小标题样式
    .sub-title
        font-size 28px
    // 分割线
    hr 
        margin 0px 10% 30px 10%
        opacity 0.2
        border-top #727878 solid 2px 
        
    .detail
        width 80%
        padding 15px 10% 15px 10%
        // flex 配置
        display flex
        flex-flow column nowrap
        justify-content center
        align-items center

        // 自我介绍
        .my-introduce
            padding 0px 0px 16px 0px
            text-align left
            h3
                font-size 28px
                text-align center
        // 中间头像
        .my-avatar
            width 200px
            height 200px
            border-radius 50%
            border #e8e8e8 solid 13px
            overflow hidden
            img 
                max-width 100%
                
        // 个人信息
        .my-info
            width 26%
            padding-left 40px
            text-align left
            .content
                padding-left 30%
            h3
                text-align center
                font-size 28px
    
    // 可以找到我的其他链接
    .link-area
        margin 0px 10%
        padding 32px
        display flex
        justify-content space-between
        flex-flow row wrap